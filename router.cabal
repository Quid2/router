test-suite router-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base,zm,hslogger,bytestring,websockets,async >= 2.1.0,stm,top,template-haskell,extra
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

test-suite router-test-pattern
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             PatternSpec.hs
  other-modules: Test.Data,Test.Data.Flat,Test.Data.Model,Test.Data2,Test.Data2.Flat,Test.Data3,Test.Data3.Flat
  build-depends:       base,containers,bytestring,text,tasty,tasty-hunit,tasty-quickcheck
                       , flat, model, zm ,top, router,template-haskell,criterion
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

test-suite router-doctest
  default-language:   Haskell2010
  type:               exitcode-stdio-1.0
  ghc-options:        -threaded
  main-is:            DocSpec.hs
  build-depends:      base >4 && <5, doctest>=0.11.1, filemanip>=0.3.6.3
  HS-Source-Dirs:     test

source-repository head
  type:     git
  location: https://github.com/tittoassini/router





