name:                router
version:             0.1.1
synopsis:            Flexible, typed router.
description:         Please see README.md
homepage:            http://github.com/tittoassini/router#readme
license:             BSD3
license-file:        LICENSE
author:              Pasqualino `Titto` Assini
maintainer:          tittoassini@gmail.com
copyright:           Copyright: (c) 2015 Pasqualino `Titto` Assini
category:            Data
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Network.Bus,Network.Router.ByAny,Network.Router.ByType,Network.Router.ByPattern,Network.Router.Echo,Network.Router.Types,Network.Router.Util,Pandoc.Report,Data.Pattern.Bits,Data.Pattern.Haskell,Data.Pattern.X64,Data.Pattern.Matcher
  build-depends:       base >= 4.7 && < 5
                     , bytestring
                     , containers
                     , data-default
                     --, deepseq >= 1.4.1.1
                     , flat==0.3.*
                     -- , ghc
                     --, ghc-paths
                     , hashable
                     , list-t
                     , model>=0.4.2 && < 0.5
                     , pandoc
                     , pandoc-types
                     , top >= 0.2.2 && < 0.3
                     , stm
                     , stm-containers>=0.2.4
                     --, strict
                     , time
                     --, timeit
                     , transformers >= 0.4
                     , zm==0.3.*
                     , unix
                     , websockets
                     , top-apps
  if (arch(x86_64))
    build-depends:  x86-64bit>=0.4.4

  default-language:    Haskell2010

executable top-net
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , bytestring
                     , hslogger
                     , text
                     , containers
                     , wai
                     , wai-websockets
                     , warp
                     , websockets
                     , scotty>=0.7.2
                     , transformers
                     , zm, top,router,top-apps

  default-language:    Haskell2010

